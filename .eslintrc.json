{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "React": "writable"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
      "semi": "error",
      "quotes": ["error", "single"],
      "comma-dangle": ["error", {
        "arrays": "always",
        "objects": "always"
      }],
      "no-unused-vars": ["error", {
        "argsIgnorePattern": "^_"
      }],
      "indent": ["error", 2]
    },
    "overrides": [
      {
        "files": ["scripts/gh-pages.ts", "scripts/next.config.ts"],
        "env": {
          "node": true
        }
      }
    ]
}
